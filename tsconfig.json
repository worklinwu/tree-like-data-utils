{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "baseUrl": "./",
        "allowJs": false,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "paths": {
            "@/*": ["src/*"],
            "@@/*": ["src/.umi/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib", "es", "dist", "typings", "**/__test__", "test", "docs", "tests"]
}
